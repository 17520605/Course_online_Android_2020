<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:id="@+id/cardview1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/_CartItem_Image"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:background="@drawable/image1"
                    android:outlineProvider="background"
                    android:scaleType="fitXY">
                </ImageView>
            </FrameLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="1dp"
                    android:gravity="left"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/_CartItem_Title"
                    android:text="Tên bài review"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    app:fontFamily="sans-serif-medium"
                    android:outlineSpotShadowColor="#050101"
                    />
                <TextView
                    android:id="@+id/_CartItem_description"
                    android:padding="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="10dp"
                    android:maxLines="2"
                    app:fontFamily="sans-serif-medium"
                    android:text="Slim fit, cotton hey brother hwo are you doing i am really good"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/icons8_us_dollar_100px">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220.000 đ"
                        android:id="@+id/_CartItem_Price"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >
            <ImageView
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons_trash"
                android:id="@+id/_CartItem_Remove"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
