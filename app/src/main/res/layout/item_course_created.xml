<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview1"
        >
        <LinearLayout
            android:id="@+id/CourseCreated__Item_Wrapper"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/CourseCreated__Item_Image"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:outlineProvider="background"
                    android:scaleType="fitXY">
                </ImageView>
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/CourseCreated__Item_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="Tên bài review"
                    android:textColor="@color/black"
                    app:fontFamily="sans-serif-medium"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/icons8_calendar_5_52px">

                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/CourseCreated__Item_DateCreate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:textSize="14dp"
                            android:text="10/02/2021"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/CourseCreated__Item_Detail_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:textColor="@color/white"
                        android:text="Detail"
                        android:textSize="10dp"
                        android:background="@drawable/bg_btn1">

                    </Button>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/icons8_us_dollar_100px">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="220.000 đ"
                        android:id="@+id/CourseCreated__Item_Price"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/CourseCreated__Item_BasePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220.000 đ"
                        android:layout_gravity="bottom"
                        android:textSize="12dp"
                        android:textColor="#440E0E"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>