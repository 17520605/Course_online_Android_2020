<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/cardview1"
        >
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/search_image"
                    android:layout_width="150dp"
                    android:layout_height="100dp"

                    android:outlineProvider="background"
                    android:scaleType="fitXY">
                </ImageView>
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/search_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="Tên bài review"
                    app:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/search_description"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="10dp"
                    android:maxLines="2"
                    app:fontFamily="sans-serif-medium"
                    android:text="Slim fit, cotton hey brother hwo are you doing i am really good"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/icons8_us_dollar_100px">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220.000 đ"
                        android:id="@+id/search_price"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:id="@+id/search__Item_BasePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220.000 đ"
                        android:layout_gravity="center_vertical"
                        android:textSize="12dp"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textColor="#440E0E"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>