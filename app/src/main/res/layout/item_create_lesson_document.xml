<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white">
        <LinearLayout
            android:id="@+id/Lesson_DocumentTab_Item_Wrapper"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/CreateLesson_Document_Item_FileIcon"
                android:gravity="left"
                android:background="@drawable/icon_excel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                />
            <TextView
                android:gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:id="@+id/CreateLesson_Document_Item_FileName"
                android:text="Tên bài review"
                android:ellipsize="end"
                app:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:textColor="@color/black"
                />
            <Button
                android:id="@+id/CreateLesson_Document_Item_RemoveBtn"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:background="@drawable/icons_back"/>
        </LinearLayout>
</LinearLayout>